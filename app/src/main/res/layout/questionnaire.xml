<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fadingEdge="none"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <!-- Question 1 -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="I understood why these rules were recommended to me."
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dip"
            android:paddingTop="8dip" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strongly disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neither agree nor disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strongly agree"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RadioGroup>

        <!-- Question 2 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dip"
            android:text="Comparing the recommendations was easy."
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dip"
            android:paddingTop="8dip" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strongly disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neither agree nor disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strongly agree"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RadioGroup>

        <!-- Question 3 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dip"
            android:text="Based on my previous actions and context, the recommended rules seem relevant."
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dip"
            android:paddingTop="8dip" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strongly disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neither agree nor disagree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agree"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strongly agree"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RadioGroup>

        <!-- Question 4 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dip"
            android:text="The app showed:"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="8dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Too few recommendations"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A reasonable number of recommendations"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Too many recommendations"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RadioGroup>

        <!-- Question 5 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dip"
            android:text="How close to the rule that you were expecting to see was the best-recommended rule?"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="8dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not even close"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not so close"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close enough"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfect match"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I was not expecting to see any particular rule"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RadioGroup>

        <!-- Question 6 (optional) -->

        <LinearLayout
            android:id="@+id/question6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:visibility="gone" >

            <!--
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/lighter_gray" />
            -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="16dip"
                android:text="What was the automation rule that you were expecting to see (optional)?"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/answer6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:textColor="#666666" >
            </EditText>
        </LinearLayout>

        <!--  -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:text="Send answers"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <!--  -->
    </LinearLayout>

</ScrollView>